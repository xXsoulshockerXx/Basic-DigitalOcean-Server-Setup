{{!< default}}

<!-- Posts Object -->
{{#tag}}

<div class="site-header jumbotron bg-dark">
	<div class="container text-center">
		<h1>{{name}}</h1>
		<p class="text-muted">{{description}}</p>
	</div>
</div>

{{#if feature_image}}<section class="container"><img class="img-fluid" src="{{feature_image}}" alt="{{tag.name}}"></section>{{/if}}

{{/tag}}

<section class="container">
	<div class="row">
		<!-- For each one of the posts, display the title -->
		{{#foreach posts}}
			{{> post_card}}
		{{/foreach}}
	</div>
</section>

<!-- Pagination block -->
<div class="container">
	{{pagination}}
</div>