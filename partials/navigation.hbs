<ul class="navbar-nav ml-auto"> <!-- mr-auto for left alignment and ml-auto for right alignment -->
    <!-- Loop through the navigation items -->
    {{#foreach navigation}}
    <li class="nav-item nav-{{slug}}{{#if current}} active nav-current{{/if}}"><a class="nav-link" href="{{url absolute="true"}}">{{label}}</a></li>
    {{/foreach}}
    <!-- End the loop -->
</ul>